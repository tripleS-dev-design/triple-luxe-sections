// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"            // pour Render en test
  url      = env("DATABASE_URL") // NE PAS hardcoder "file:dev.sqlite"
}

model Session {
  id        String   @id
  content   Json

  // facultatifs (debug/tri)
  shop      String?
  state     String?
  isOnline  Boolean?  @default(false)
  scope     String?
  expires   DateTime?
  userId    BigInt?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("session") // table r√©elle = "session"
}
