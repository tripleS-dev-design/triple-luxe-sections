<style>
.banner-slider{ position:relative; width:100%; overflow:hidden; background:#fff; }
.banner-slider-track{ display:flex; animation: bannerSlide 12s infinite ease-in-out; }
.banner-slide{ flex:0 0 100%; text-align:center; }
.banner-slide img{ width:100%; height:400px; object-fit:contain; background:#fff; display:block; }
@keyframes bannerSlide{
  0%,10%{ transform: translateX(0%); }
  33%,43%{ transform: translateX(-100%); }
  66%,76%{ transform: translateX(-200%); }
  100%{ transform: translateX(0%); }
}
</style>

<div class="banner-slider">
  <div class="banner-slider-track">
    <div class="banner-slide">
      {% if block.settings.image_1 %}
        {{ block.settings.image_1 | image_url: width: 1200 | image_tag: class: 'banner-img', alt: 'Bannière 1' }}
      {% endif %}
    </div>
    <div class="banner-slide">
      {% if block.settings.image_2 %}
        {{ block.settings.image_2 | image_url: width: 1200 | image_tag: class: 'banner-img', alt: 'Bannière 2' }}
      {% endif %}
    </div>
    <div class="banner-slide">
      {% if block.settings.image_3 %}
        {{ block.settings.image_3 | image_url: width: 1200 | image_tag: class: 'banner-img', alt: 'Bannière 3' }}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "TLS — Bannière 3 images",
  "target": "section",
  "settings": [
    { "type": "image_picker", "id": "image_1", "label": "Image 1" },
    { "type": "image_picker", "id": "image_2", "label": "Image 2" },
    { "type": "image_picker", "id": "image_3", "label": "Image 3" }
  ]
}
{% endschema %}
