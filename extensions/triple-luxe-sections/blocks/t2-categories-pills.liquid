<section class="t2-cat {% if section.settings.full_bleed %}t2-cat--bleed{% endif %}"
  style="
    --gap: {{ section.settings.gap }}px;
    --radius: {{ section.settings.radius }}px;
    --ratio: {{ section.settings.ratio }};
    --overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  "
>
  {% if section.settings.title != blank %}
    <h3 class="t2-cat__title">{{ section.settings.title | escape }}</h3>
  {% endif %}

  <div class="t2-cat__grid">
    {%- comment -%} ==== CARD 1 ==== {%- endcomment -%}
    {% assign img = section.settings.image_1 %}
    {% assign label = section.settings.label_1 %}
    {% assign sub = section.settings.sub_1 %}
    {% assign url = section.settings.url_1 %}
    {% assign cta = section.settings.btn_label_1 %}
    {% if img != blank %}
      {% if url != blank %}<a class="t2-card" href="{{ url }}" aria-label="{{ label | default: 'Category 1' | escape }}">{% else %}<div class="t2-card">{% endif %}
        <div class="t2-card__media">
          {{ img
            | image_url: width: 1600
            | image_tag:
                class: 't2-card__img',
                alt: label,
                widths: '600,900,1200,1600',
                sizes: '(max-width: 749px) 100vw, (max-width: 1199px) 50vw, 33vw',
                loading: 'lazy'
          }}
          <div class="t2-card__scrim"></div>
        </div>
        <div class="t2-card__meta">
          {% if label != blank %}<h4 class="t2-card__title">{{ label }}</h4>{% endif %}
          {% if sub != blank %}<span class="t2-card__sub">{{ sub }}</span>{% endif %}
          {% if cta != blank %}<span class="t2-card__cta">{{ cta }}</span>{% endif %}
        </div>
      {% if url != blank %}</a>{% else %}</div>{% endif %}
    {% endif %}

    {%- comment -%} ==== CARD 2 ==== {%- endcomment -%}
    {% assign img = section.settings.image_2 %}
    {% assign label = section.settings.label_2 %}
    {% assign sub = section.settings.sub_2 %}
    {% assign url = section.settings.url_2 %}
    {% assign cta = section.settings.btn_label_2 %}
    {% if img != blank %}
      {% if url != blank %}<a class="t2-card" href="{{ url }}" aria-label="{{ label | default: 'Category 2' | escape }}">{% else %}<div class="t2-card">{% endif %}
        <div class="t2-card__media">
          {{ img
            | image_url: width: 1600
            | image_tag:
                class: 't2-card__img',
                alt: label,
                widths: '600,900,1200,1600',
                sizes: '(max-width: 749px) 100vw, (max-width: 1199px) 50vw, 33vw',
                loading: 'lazy'
          }}
          <div class="t2-card__scrim"></div>
        </div>
        <div class="t2-card__meta">
          {% if label != blank %}<h4 class="t2-card__title">{{ label }}</h4>{% endif %}
          {% if sub != blank %}<span class="t2-card__sub">{{ sub }}</span>{% endif %}
          {% if cta != blank %}<span class="t2-card__cta">{{ cta }}</span>{% endif %}
        </div>
      {% if url != blank %}</a>{% else %}</div>{% endif %}
    {% endif %}

    {%- comment -%} ==== CARD 3 ==== {%- endcomment -%}
    {% assign img = section.settings.image_3 %}
    {% assign label = section.settings.label_3 %}
    {% assign sub = section.settings.sub_3 %}
    {% assign url = section.settings.url_3 %}
    {% assign cta = section.settings.btn_label_3 %}
    {% if img != blank %}
      {% if url != blank %}<a class="t2-card" href="{{ url }}" aria-label="{{ label | default: 'Category 3' | escape }}">{% else %}<div class="t2-card">{% endif %}
        <div class="t2-card__media">
          {{ img
            | image_url: width: 1600
            | image_tag:
                class: 't2-card__img',
                alt: label,
                widths: '600,900,1200,1600',
                sizes: '(max-width: 749px) 100vw, (max-width: 1199px) 50vw, 33vw',
                loading: 'lazy'
          }}
          <div class="t2-card__scrim"></div>
        </div>
        <div class="t2-card__meta">
          {% if label != blank %}<h4 class="t2-card__title">{{ label }}</h4>{% endif %}
          {% if sub != blank %}<span class="t2-card__sub">{{ sub }}</span>{% endif %}
          {% if cta != blank %}<span class="t2-card__cta">{{ cta }}</span>{% endif %}
        </div>
      {% if url != blank %}</a>{% else %}</div>{% endif %}
    {% endif %}
  </div>

  {% if section.settings.promo_enable %}
    <div class="t2-promo">
      <div class="t2-promo__content">
        {% if section.settings.promo_text != blank %}
          <strong class="t2-promo__text">{{ section.settings.promo_text }}</strong>
        {% endif %}
        {% if section.settings.promo_btn_label != blank and section.settings.promo_btn_url != blank %}
          <a class="t2-promo__btn" href="{{ section.settings.promo_btn_url }}">{{ section.settings.promo_btn_label }}</a>
        {% endif %}
      </div>
    </div>
  {% endif %}
</section>

<style>
/* ===== Layout ===== */
.t2-cat{ width:100%; padding-left:16px; padding-right:16px }
.t2-cat--bleed{ position:relative; left:50%; right:50%; margin-left:-50vw; margin-right:-50vw; width:100vw; max-width:100vw; padding-left:0; padding-right:0 }
.t2-cat__title{ margin:0 0 14px; font-weight:800; font-size:clamp(18px,2.4vw,24px) }

/* Grid 1â†’3 columns */
.t2-cat__grid{ display:grid; gap:var(--gap,16px); grid-template-columns:1fr }
@media (min-width: 750px){ .t2-cat__grid{ grid-template-columns: repeat(2, 1fr) } }
@media (min-width: 1100px){ .t2-cat__grid{ grid-template-columns: repeat(3, 1fr) } }

/* Card */
.t2-card{
  position:relative; display:block; border-radius:var(--radius,16px);
  overflow:hidden; text-decoration:none; color:inherit; background:#f7f7f8;
  box-shadow: 0 4px 16px rgba(0,0,0,.04);
}
.t2-card__media{ position:relative; aspect-ratio: var(--ratio, 4/5) }
.t2-card__img{
  width:100%; height:100%; object-fit:cover; object-position:center; display:block;
  transform:translateZ(0); transition: transform .35s ease, filter .35s ease;
}
.t2-card__scrim{
  position:absolute; inset:0; pointer-events:none;
  background: linear-gradient(to top, rgba(0,0,0,calc(var(--overlay-opacity,.35))) 16%, rgba(0,0,0,0) 55%);
}
.t2-card__meta{
  position:absolute; left:14px; right:14px; bottom:12px;
  display:flex; gap:6px; flex-direction:column; color:#fff; text-shadow:0 2px 10px rgba(0,0,0,.45);
}
.t2-card__title{ margin:0; font-weight:900; letter-spacing:.2px; font-size: clamp(16px, 2.2vw, 22px) }
.t2-card__sub{ font-size: 13px; opacity:.95 }
.t2-card__cta{
  display:inline-block; margin-top:4px; align-self:flex-start;
  background: radial-gradient(120% 120% at 30% 20%, #ff6b6b, #e11d2e);
  color:#fff; padding:8px 12px; border-radius:10px; font-weight:800; letter-spacing:.2px;
  box-shadow:0 10px 24px rgba(225,29,46,.35);
}
.t2-card:hover .t2-card__img{ transform: scale(1.05); filter: saturate(1.05) }

/* Promo separator */
.t2-promo{
  margin-top: clamp(10px, 2vw, 16px);
  background: linear-gradient(90deg, #111827, #1f2937);
  border-radius: var(--radius,16px); color:#fff;
}
.t2-promo__content{
  display:flex; align-items:center; gap:12px; justify-content:space-between;
  padding: clamp(10px, 2vw, 14px) clamp(14px, 3vw, 20px);
  flex-wrap:wrap;
}
.t2-promo__text{ font-size: clamp(14px, 2.4vw, 18px); font-weight:800 }
.t2-promo__btn{
  text-decoration:none; color:#111; background:#fff; border-radius:10px; padding:8px 12px; font-weight:800;
  box-shadow:0 10px 24px rgba(0,0,0,.12)
}
.t2-promo__btn:hover{ transform: translateY(-1px) }
</style>

{% schema %}
{
  "name": "Categories Trio",
  "target": "section",
  "settings": [
    { "type": "checkbox", "id": "full_bleed", "label": "Edge-to-edge (100vw)", "default": false },
    { "type": "text", "id": "title", "label": "Title", "default": "Categories" },

    { "type": "range", "id": "gap", "label": "Card spacing (px)", "min": 8, "max": 32, "step": 1, "default": 16 },
    { "type": "range", "id": "radius", "label": "Corner radius (px)", "min": 0, "max": 36, "step": 1, "default": 16 },
    {
      "type": "select",
      "id": "ratio",
      "label": "Image ratio",
      "default": "4/5",
      "options": [
        { "value": "16/9", "label": "Landscape 16:9" },
        { "value": "1/1",  "label": "Square 1:1" },
        { "value": "4/5",  "label": "Portrait 4:5" }
      ]
    },
    { "type": "range", "id": "overlay_opacity", "label": "Overlay intensity (%)", "min": 0, "max": 100, "step": 5, "default": 35 },

    { "type": "header", "content": "Card 1" },
    { "type": "image_picker", "id": "image_1", "label": "Image 1" },
    { "type": "text", "id": "label_1", "label": "Title 1", "default": "Men" },
    { "type": "text", "id": "sub_1", "label": "Subtitle 1", "default": "New arrivals" },
    { "type": "url", "id": "url_1", "label": "URL 1" },
    { "type": "text", "id": "btn_label_1", "label": "Button 1 label", "default": "Discover" },

    { "type": "header", "content": "Card 2" },
    { "type": "image_picker", "id": "image_2", "label": "Image 2" },
    { "type": "text", "id": "label_2", "label": "Title 2", "default": "Women" },
    { "type": "text", "id": "sub_2", "label": "Subtitle 2", "default": "Best sellers" },
    { "type": "url", "id": "url_2", "label": "URL 2" },
    { "type": "text", "id": "btn_label_2", "label": "Button 2 label", "default": "Shop" },

    { "type": "header", "content": "Card 3" },
    { "type": "image_picker", "id": "image_3", "label": "Image 3" },
    { "type": "text", "id": "label_3", "label": "Title 3", "default": "Kids" },
    { "type": "text", "id": "sub_3", "label": "Subtitle 3", "default": "Back to school" },
    { "type": "url", "id": "url_3", "label": "URL 3" },
    { "type": "text", "id": "btn_label_3", "label": "Button 3 label", "default": "View" },

    { "type": "header", "content": "Promo separator" },
    { "type": "checkbox", "id": "promo_enable", "label": "Show promo separator", "default": true },
    { "type": "text", "id": "promo_text", "label": "Main text", "default": "Free shipping from 499 MAD" },
    { "type": "text", "id": "promo_btn_label", "label": "Button label", "default": "Get it" },
    { "type": "url", "id": "promo_btn_url", "label": "Button URL", "default": "/collections/all" }
  ]
}
{% endschema %}
