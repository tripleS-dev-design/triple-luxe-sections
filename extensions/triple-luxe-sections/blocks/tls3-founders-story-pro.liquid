<section class="tls3-founders">
  <div class="tls3-founders__in">
    <div>
      {% if block.settings.title != blank %}<h2>{{ block.settings.title }}</h2>{% endif %}
      {% if block.settings.text != blank %}<p>{{ block.settings.text }}</p>{% endif %}
    </div>
    {% if block.settings.image != blank %}
      {{ block.settings.image | image_url: width: 1200 | image_tag: class: 'tls3-founders__img', alt: block.settings.title, loading: 'lazy' }}
    {% endif %}
  </div>
</section>

<style>
.tls3-founders{ max-width:1200px; margin:0 auto; padding:24px 16px }
.tls3-founders__in{ display:grid; gap:16px; grid-template-columns:1.2fr 1fr; align-items:center }
@media (max-width:900px){ .tls3-founders__in{ grid-template-columns:1fr } }
.tls3-founders__img{ width:100%; height:auto; display:block; border-radius:12px }
</style>

{% schema %}
{
  "name": "Founders story",
  "target": "section",
  "settings": [
    { "type": "text", "id": "title", "label": "Titre", "default": "Notre histoire" },
    { "type": "textarea", "id": "text", "label": "Texte" },
    { "type": "image_picker", "id": "image", "label": "Image" }
  ]
}
{% endschema %}
