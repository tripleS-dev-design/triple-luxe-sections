<section class="tls3-founders">
  <div class="tls3-founders__in">
    <div>
      {% if section.settings.title != blank %}
        <h2>{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p>{{ section.settings.text }}</p>
      {% endif %}
    </div>

    {% if section.settings.image != blank %}
      {{ section.settings.image
        | image_url: width: 1200
        | image_tag: class: 'tls3-founders__img', alt: section.settings.title, loading: 'lazy' }}
    {% endif %}
  </div>
</section>

<style>
.tls3-founders{ max-width:1200px; margin:0 auto; padding:24px 16px }
.tls3-founders__in{ display:grid; gap:16px; grid-template-columns:1.2fr 1fr; align-items:center }
@media (max-width:900px){ .tls3-founders__in{ grid-template-columns:1fr } }
.tls3-founders__img{ width:100%; height:auto; display:block; border-radius:12px }
</style>

{% schema %}
{
  "name": "Founders story",
  "target": "section",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Our story" },
    { "type": "textarea", "id": "text", "label": "Text" },
    { "type": "image_picker", "id": "image", "label": "Image" }
  ]
}
{% endschema %}
