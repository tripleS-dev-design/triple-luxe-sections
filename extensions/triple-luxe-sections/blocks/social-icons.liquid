{% comment %} Social Icons â€” compact strip with optional labels {% endcomment %}
<section class="x-social-strip" aria-label="Social media">
  <div class="x-social-strip__inner x-{{ section.settings.align }}">
    {% assign show_labels = section.settings.show_labels %}
    {% assign size = section.settings.size %}

    {% if section.settings.ig_url != blank %}
      <a class="sbtn" href="{{ section.settings.ig_url }}" target="_blank" rel="noopener" aria-label="Instagram" title="Instagram">
        <span class="sbtn__icon" style="width:{{ size }}px;height:{{ size }}px">
          <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M7 2h10a5 5 0 015 5v10a5 5 0 01-5 5H7a5 5 0 01-5-5V7a5 5 0 015-5zm5 5.5A5.5 5.5 0 1112 19a5.5 5.5 0 010-11zM12 9a3 3 0 100 6 3 3 0 000-6zm6.75-.5a1.25 1.25 0 110-2.5 1.25 1.25 0 010 2.5z"/></svg>
        </span>{% if show_labels %}<span class="sbtn__label">Instagram</span>{% endif %}
      </a>
    {% endif %}

    {% if section.settings.fb_url != blank %}
      <a class="sbtn" href="{{ section.settings.fb_url }}" target="_blank" rel="noopener" aria-label="Facebook" title="Facebook">
        <span class="sbtn__icon" style="width:{{ size }}px;height:{{ size }}px">
          <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M13 22v-8h3l1-4h-4V7a1 1 0 011-1h3V2h-3a5 5 0 00-5 5v3H6v4h3v8h4z"/></svg>
        </span>{% if show_labels %}<span class="sbtn__label">Facebook</span>{% endif %}
      </a>
    {% endif %}

    {% if section.settings.wa_url != blank %}
      <a class="sbtn" href="{{ section.settings.wa_url }}" target="_blank" rel="noopener" aria-label="WhatsApp" title="WhatsApp">
        <span class="sbtn__icon" style="width:{{ size }}px;height:{{ size }}px">
          <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M20 4.6A9.9 9.9 0 0012.1 2 10 10 0 002 12a10 10 0 001.5 5.2L2 22l4.9-1.3A10 10 0 1012.1 2h-.1zm0 8a8 8 0 01-11.8 6.9l-.3-.2-2.9.8.8-2.8-.2-.3A8 8 0 1112 4a8 8 0 018 8z"/></svg>
        </span>{% if show_labels %}<span class="sbtn__label">WhatsApp</span>{% endif %}
      </a>
    {% endif %}

    {% if section.settings.yt_url != blank %}
      <a class="sbtn" href="{{ section.settings.yt_url }}" target="_blank" rel="noopener" aria-label="YouTube" title="YouTube">
        <span class="sbtn__icon" style="width:{{ size }}px;height:{{ size }}px">
          <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M23 7.5a4 4 0 00-2.8-2.8C18.2 4 12 4 12 4s-6.2 0-8.2.7A4 4 0 001 7.5 41 41 0 001 12a41 41 0 000 4.5A4 4 0 003.8 19C5.8 19.7 12 19.7 12 19.7s6.2 0 8.2-.7A4 4 0 0023 16.5 41 41 0 0023 12a41 41 0 000-4.5zM10 15.3V8.7L15.5 12 10 15.3z"/></svg>
        </span>{% if show_labels %}<span class="sbtn__label">YouTube</span>{% endif %}
      </a>
    {% endif %}

    {% if section.settings.tt_url != blank %}
      <a class="sbtn" href="{{ section.settings.tt_url }}" target="_blank" rel="noopener" aria-label="TikTok" title="TikTok">
        <span class="sbtn__icon" style="width:{{ size }}px;height:{{ size }}px">
          <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M21 8.1a7 7 0 01-4.8-2V15a5 5 0 11-5-5 5 5 0 011 .1V7.2a7 7 0 00-1-.1 7 7 0 107 7V9.8a9 9 0 004.8 1.5V8.1z"/></svg>
        </span>{% if show_labels %}<span class="sbtn__label">TikTok</span>{% endif %}
      </a>
    {% endif %}

    {% if section.settings.x_url != blank %}
      <a class="sbtn" href="{{ section.settings.x_url }}" target="_blank" rel="noopener" aria-label="X (Twitter)" title="X (Twitter)">
        <span class="sbtn__icon" style="width:{{ size }}px;height:{{ size }}px">
          <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M18 2h3l-7.5 8.6L22 22h-6.2l-4.9-6-5.6 6H2l8.1-8.9L2 2h6.3l4.4 5.6L18 2z"/></svg>
        </span>{% if show_labels %}<span class="sbtn__label">X</span>{% endif %}
      </a>
    {% endif %}
  </div>
</section>

<style>
.x-social-strip{
  --fg: {{ section.settings.color | default: '#0b1f3a' }};
  --bg: {{ section.settings.bg | default: 'transparent' }};
  background: var(--bg); color: var(--fg); padding: {{ section.settings.pad }}px;
}
.x-social-strip__inner{display:flex;gap:{{ section.settings.gap }}px;align-items:center}
.x-left{justify-content:flex-start}.x-center{justify-content:center}.x-right{justify-content:flex-end}
.sbtn{display:inline-flex;align-items:center;gap:8px;color:inherit;text-decoration:none}
.sbtn__icon{display:inline-flex;align-items:center;justify-content:center;border-radius:999px;border:1px solid currentColor;box-shadow:0 0 12px rgba(0,0,0,.06)}
.sbtn__icon svg{width:60%;height:60%;fill:currentColor}
.sbtn__label{font-weight:600;opacity:.9}
.sbtn:hover .sbtn__label{text-decoration:underline}
</style>

{% schema %}
{
  "name": "Social Icons",
  "target": "section",
  "settings": [
    { "type": "checkbox", "id": "show_labels", "label": "Show labels", "default": false },
    { "type": "range", "id": "size", "label": "Icon size (px)", "min": 20, "max": 60, "step": 2, "default": 38 },
    { "type": "select", "id": "align", "label": "Alignment", "default": "center", "options": [
      { "value": "left", "label": "Left" },
      { "value": "center", "label": "Center" },
      { "value": "right", "label": "Right" }
    ]},
    { "type": "range", "id": "gap", "label": "Gap (px)", "min": 4, "max": 28, "step": 1, "default": 12 },
    { "type": "range", "id": "pad", "label": "Padding (px)", "min": 0, "max": 40, "step": 2, "default": 10 },

    { "type": "color", "id": "color", "label": "Icon & text color", "default": "#0b1f3a" },
    { "type": "color", "id": "bg", "label": "Background", "default": "transparent" },

    { "type": "url", "id": "ig_url", "label": "Instagram URL" },
    { "type": "url", "id": "fb_url", "label": "Facebook URL" },
    { "type": "url", "id": "wa_url", "label": "WhatsApp URL" },
    { "type": "url", "id": "yt_url", "label": "YouTube URL" },
    { "type": "url", "id": "tt_url", "label": "TikTok URL" },
    { "type": "url", "id": "x_url", "label": "X (Twitter) URL" }
  ]
}
{% endschema %}
