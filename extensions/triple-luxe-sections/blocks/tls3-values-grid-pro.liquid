{%- comment -%}
Brand — Valeurs (icônes)
- 3 à 6 piliers : icône (SVG inline simple), titre, texte
- Hover: léger soulèvement + glow
{%- endcomment -%}

<section id="tls3-vg-{{ section.id }}" class="tls3-vg"
  style="--bg: {{ section.settings.bg }}; --fg: {{ section.settings.fg }}; --accent: {{ section.settings.accent }};">
  <div class="tls3-vg__wrap">
    {% if section.settings.title != blank %}<h2 class="title">{{ section.settings.title }}</h2>{% endif %}
    {% if section.settings.subtitle != blank %}<p class="sub">{{ section.settings.subtitle }}</p>{% endif %}

    <div class="grid" style="--cols: {{ section.settings.columns }};">
      {% for block in section.blocks %}
      {% if block.type == 'value' %}
      <article class="card" {{ block.shopify_attributes }}>
        <div class="ico" aria-hidden="true">
          {% case block.settings.icon %}
            {% when 'spark' %}<svg viewBox="0 0 24 24" width="24" height="24"><path fill="currentColor" d="M12 2l2 5 5 2-5 2-2 5-2-5-5-2 5-2z"/></svg>
            {% when 'shield' %}<svg viewBox="0 0 24 24" width="24" height="24"><path fill="currentColor" d="M12 2l8 4v6c0 5-3.4 8.7-8 10-4.6-1.3-8-5-8-10V6z"/></svg>
            {% when 'heart' %}<svg viewBox="0 0 24 24" width="24" height="24"><path fill="currentColor" d="M12 21s-7-4.4-9-8.4C1 9 3 6 6 6c2 0 3.3 1.2 4 2 0 0 1-2 4-2 3 0 5 3 3 6.6S12 21 12 21z"/></svg>
            {% else %}<svg viewBox="0 0 24 24" width="24" height="24"><circle cx="12" cy="12" r="9" fill="currentColor"/></svg>
          {% endcase %}
        </div>
        <h3 class="h">{{ block.settings.title }}</h3>
        {% if block.settings.text != blank %}<p class="p">{{ block.settings.text }}</p>{% endif %}
      </article>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
#tls3-vg-{{ section.id }}.tls3-vg{background:var(--bg,#0b0f14); color:var(--fg,#fff); padding:28px 0}
#tls3-vg-{{ section.id }} .tls3-vg__wrap{max-width:1200px; margin:0 auto; padding:0 16px; text-align:center}
#tls3-vg-{{ section.id }} .title{margin:0; font-size:clamp(18px,3vw,28px); font-weight:900}
#tls3-vg-{{ section.id }} .sub{margin:6px 0 16px; opacity:.85}
#tls3-vg-{{ section.id }} .grid{display:grid; gap:14px; grid-template-columns:repeat(var(--cols,3),minmax(0,1fr))}
#tls3-vg-{{ section.id }} .card{background:#0f1220; border:1px solid rgba(124,58,237,.25); border-radius:14px; padding:14px; text-align:left; transition:transform .18s ease, box-shadow .18s ease}
#tls3-vg-{{ section.id }} .card:hover{transform:translateY(-2px); box-shadow:0 10px 28px rgba(124,58,237,.25)}
#tls3-vg-{{ section.id }} .ico{width:40px; height:40px; display:grid; place-items:center; color:var(--accent,#7c3aed); background:rgba(124,58,237,.12); border-radius:10px; margin-bottom:8px}
#tls3-vg-{{ section.id }} .h{margin:0 0 6px; font-size:16px; font-weight:800}
#tls3-vg-{{ section.id }} .p{margin:0; opacity:.9}
@media (max-width: 720px){ #tls3-vg-{{ section.id }} .grid{grid-template-columns:1fr 1fr} }
@media (max-width: 520px){ #tls3-vg-{{ section.id }} .grid{grid-template-columns:1fr} }
</style>

{% schema %}
{
  "name": "Brand — Valeurs (icônes)",
  "settings": [
    { "type": "text", "id": "title", "label": "Titre", "default": "Nos piliers" },
    { "type": "text", "id": "subtitle", "label": "Sous-titre", "default": "Design, vitesse et simplicité — l’ADN Triple S." },
    { "type": "range", "id": "columns", "label": "Colonnes (desktop)", "min": 2, "max": 4, "step": 1, "default": 3 },
    { "type": "color", "id": "bg", "label": "Fond", "default": "#0b0f14" },
    { "type": "color", "id": "fg", "label": "Texte", "default": "#ffffff" },
    { "type": "color", "id": "accent", "label": "Accent", "default": "#7c3aed" }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Valeur",
      "settings": [
        { "type": "select", "id": "icon", "label": "Icône", "default": "spark",
          "options": [
            { "value": "spark", "label": "Éclair" },
            { "value": "shield", "label": "Bouclier" },
            { "value": "heart", "label": "Cœur" }
          ]
        },
        { "type": "text", "id": "title", "label": "Titre", "default": "Créativité" },
        { "type": "text", "id": "text", "label": "Texte", "default": "Des sections inspirantes et efficaces." }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    { "name": "Brand — Valeurs (icônes)", "blocks": [{ "type": "value" }, { "type": "value" }, { "type": "value" }] }
  ]
}
{% endschema %}
