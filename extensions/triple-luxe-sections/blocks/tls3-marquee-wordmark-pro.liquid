{%- comment -%}
Brand — Wordmark Marquee
- Bande défilante du mot-symbole (logo texte ou simple mot)
- Alternance couleurs + vitesse réglable
{%- endcomment -%}

<section id="tls3-wm-{{ section.id }}" class="tls3-wm"
  style="--bg: {{ section.settings.bg }}; --fg: {{ section.settings.fg }}; --accent: {{ section.settings.accent }}; --spd: {{ section.settings.speed }}s;">
  <div class="tls3-wm__inner">
    <div class="tls3-wm__track">
      {% assign label = section.settings.label | default: 'TRIPLE S' %}
      {% for i in (1..20) %}
        <span class="w">{{ label }}</span>
      {% endfor %}
    </div>
  </div>
</section>

<style>
#tls3-wm-{{ section.id }}.tls3-wm{background:var(--bg,#0f0f12); color:var(--fg,#fff); padding:8px 0; border-top:1px solid rgba(255,255,255,.08); border-bottom:1px solid rgba(255,255,255,.08)}
#tls3-wm-{{ section.id }} .tls3-wm__inner{overflow:hidden}
#tls3-wm-{{ section.id }} .tls3-wm__track{display:flex; gap:24px; width:max-content; animation:wm{{ section.id }} var(--spd,14s) linear infinite; font-weight:900; letter-spacing:.22em; text-transform:uppercase}
#tls3-wm-{{ section.id }} .w{padding:6px 2px}
#tls3-wm-{{ section.id }} .w:nth-child(odd){color:var(--fg)}
#tls3-wm-{{ section.id }} .w:nth-child(even){color:var(--accent)}
@keyframes wm{{ section.id }}{from{transform:translateX(0)}to{transform:translateX(-50%)}}
</style>

{% schema %}
{
  "name": "Brand — Marquee (wordmark)",
  "settings": [
    { "type": "text", "id": "label", "label": "Texte répété", "default": "TRIPLE S" },
    { "type": "color", "id": "bg", "label": "Fond", "default": "#0f0f12" },
    { "type": "color", "id": "fg", "label": "Texte 1", "default": "#ffffff" },
    { "type": "color", "id": "accent", "label": "Texte 2 (accent)", "default": "#7c3aed" },
    { "type": "range", "id": "speed", "label": "Vitesse (s)", "min": 6, "max": 40, "step": 1, "default": 14 }
  ],
  "presets": [{ "name": "Brand — Marquee (wordmark)" }]
}
{% endschema %}
