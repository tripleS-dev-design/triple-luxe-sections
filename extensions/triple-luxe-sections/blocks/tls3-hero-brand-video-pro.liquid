<section class="tls3-hero">
  {% if block.settings.poster != blank %}
    {%- assign alt_text = block.settings.title | default: 'Hero' | escape -%}
    {{ block.settings.poster | image_url: width: 2400 | image_tag: class: 'tls3-hero__image', alt: alt_text, loading: 'eager' }}
  {% endif %}
  <div class="tls3-hero__overlay">
    {% if block.settings.title != blank %}<h1>{{ block.settings.title }}</h1>{% endif %}
    {% if block.settings.subtitle != blank %}<p>{{ block.settings.subtitle }}</p>{% endif %}
    {% if block.settings.video_url != blank %}
      <a class="tls3-hero__btn" href="{{ block.settings.video_url }}" target="_blank" rel="noopener">Voir la vidéo</a>
    {% endif %}
  </div>
</section>

<style>
.tls3-hero{ position:relative }
.tls3-hero__image{ width:100%; height:min(62vw,560px); object-fit:cover; display:block }
.tls3-hero__overlay{ position:absolute; inset:auto 5% 8% 5%; color:#fff; text-shadow:0 2px 14px rgba(0,0,0,.5) }
.tls3-hero__btn{ display:inline-block; margin-top:10px; background:#000; color:#fff; padding:10px 14px; border-radius:8px; text-decoration:none }
.tls3-hero__btn:hover{ opacity:.9 }
</style>

{% schema %}
{
  "name": "Brand hero video",
  "target": "section",
  "settings": [
    { "type": "text", "id": "title", "label": "Titre", "default": "Notre Marque" },
    { "type": "textarea", "id": "subtitle", "label": "Sous-titre" },
    { "type": "image_picker", "id": "poster", "label": "Poster / Image" },
    { "type": "url", "id": "video_url", "label": "Lien vidéo (optionnel)" }
  ]
}
{% endschema %}
