{% comment %} Image Scroller â€” continuous horizontal strip {% endcomment %}
<section class="x-image-scroller" aria-label="Image scroller">
  <div class="strip" role="list" aria-live="polite">
    {% for i in (1..section.settings.count) %}
      {% capture key_img %}image_{{ i }}{% endcapture %}
      {% capture key_alt %}alt_{{ i }}{% endcapture %}
      {% assign img = section.settings[key_img] %}
      {% assign alt_text = section.settings[key_alt] | default: 'Gallery image ' | append: i %}
      {% if img %}
        <div class="cell" role="listitem">
          {{ img
            | image_url: width: 800
            | image_tag:
              alt: alt_text,
              loading: 'lazy',
              widths: '320, 480, 640, 800',
              sizes: '(min-width: 992px) 40vw, 80vw'
          }}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<style>
.x-image-scroller{padding:24px 0;background:#0b1f3a}
.strip{display:flex;gap:16px;overflow:hidden;mask-image:linear-gradient(90deg,transparent,#000 10%,#000 90%,transparent);animation:x-scroll 25s linear infinite}
.strip:hover{animation-play-state:paused}
.cell{flex:0 0 auto}
.cell img{height:140px;width:auto;border-radius:10px;display:block;box-shadow:0 0 16px rgba(255,204,0,.25)}
@keyframes x-scroll{from{transform:translateX(0)}to{transform:translateX(-50%)}}
</style>

